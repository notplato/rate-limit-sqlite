{
  "compilerOptions": {
    "outDir": "./build",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "declaration": true,
  },

  "include": ["source/*"],
  "exclude": ["node_modules", "build"]
}
